        <record id="arfi_customer_search_view" model="ir.ui.view">
            <field name="name">res.partner.customer.search</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <search string="Clients">
                	 <field name="code"/>
                    <field name="name" string="Société"/>
                	<filter string="Clients" name="customer" domain="[('customer','=',1), ('parent_id', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="arfi_customer_tree_view" model="ir.ui.view">
            <field name="name">res.partner.customer.tree</field>
            <field name="model">res.partner</field>
            <field name="arch" type="xml" >
                <tree string="Product">
                    <field name="code"/>
                    <field name="name" string="Société"/>
		         </tree>
            </field>
        </record>
