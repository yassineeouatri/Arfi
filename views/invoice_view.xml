        <record id="product_invoice_search_view" model="ir.ui.view">
            <field name="name">product.invoice.search</field>
            <field name="model">product.invoice</field>
            <field name="arch" type="xml">
                <search string="Dégat">
                	<field name="name"/>
                	<field name="date_invoice"/>
                    <field name="no_order"/>
                    <field name="company_id"/>
                    <field name="customer_id"/>
                    <filter name="invoice_paied" string="Payée" domain="[('state','=','open')]"/>
                    <filter name="invoice_not_paied" string="Non Payée" domain="[('state','=','draft')]"/>
                    <group expand="0" string="Group By"/>

                </search>
            </field>
        </record>
		<record id="product_devis_search_view" model="ir.ui.view">
