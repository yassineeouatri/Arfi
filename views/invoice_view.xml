        <record id="product_invoice_form_view" model="ir.ui.view">
            <field name="name">product.invoice.form</field>
            <field name="model">product.invoice</field>
            <field name="arch" type="xml">
                <form string="Facture">
                    <header>
                        <button name="action_invoice_open" string="Payée" states="draft" type="object" class="oe_highlight" icon="fa-check-square"/>
                        <button name="action_invoice_draft" string="Non Payée" states="open" type="object" />
                        <field name="state" widget="statusbar" status_visible="draft"/>
                    </header>
                	<sheet>
                        <div style="width: 100%;text-align: center;background: #F0EEEE;border-radius: 4px;border: solid 1px #dddddd;">
                            <h1><field name="company_id" widget="selection"/></h1>
                        </div>
                        <group attrs="{'invisible' : [('state','!=','open')]}">
		                	<fieldset style="border: 1px solid #ddd !important;padding: 0 0.5em 0em 0.5em !important;margin: 0 0 1em 0 !important;">
								<legend style="color: #7c7bad;width:inherit;padding:0 2px; border-bottom:none;font-weight: bold ! important;font-size: 14px ! important;margin-bottom: 0px ! important;" >Informations sur le paiement:</legend>
					  			<group style="width : 50%">
			                		 <field name="date_paiement"/>
                                     <field name="no_cheque" attrs="{'invisible' : [('mode_paiement','!=','Cheque')]}"/>
                                     <field name="no_virement" attrs="{'invisible' : [('mode_paiement','!=','Virement')]}"/>
			                	</group>
			                	<group style="width : 50%">
			                		<field name="mode_paiement"/>
			                	</group>
			               </fieldset>
		                </group>
                    	<group>
		                	<fieldset style="border: 1px solid #ddd !important;padding: 0 0.5em 0em 0.5em !important;margin: 0 0 1em 0 !important;">
								<legend style="color: #7c7bad;width:inherit;padding:0 2px; border-bottom:none;font-weight: bold ! important;font-size: 14px ! important;margin-bottom: 0px ! important;" >Informations :</legend> 
					  			<group style="width : 50%">	
			                		 <field name="name"/>
			                		 <field name="no_order" options="{'no_create': True,'no_open': True}"/>
                    				 <field name="bl"/>
			                		 <field name="bc"/>
			                		 <field name="designation"/>
			                	</group>
			                	<group style="width : 50%"> 
			                		<field name="date_invoice"/>
                                    <field name="date_echeance" invisible="1"/>
			                		<field name="customer_id"   options="{'no_create': True}" context="{'form_view_ref': 'arfi.arfi_customer_ice_form_view'}"/>
			                		<field name="ice"/>
			                		<field name="city" />
		                		 	 <field name="type" invisible="1"/>
			                	</group>
			               </fieldset> 	
		                </group>

		                <group>	
	                		 <fieldset style="border: 1px solid #ddd !important;padding: 0 0.5em 0em 0.5em !important;margin: 0 0 1em 0 !important;">
								<legend style="color: #7c7bad;width:inherit;padding:0 2px; border-bottom:none;font-weight: bold ! important;font-size: 14px ! important;margin-bottom: 0px ! important;" >Détail facture :</legend> 
					  			<field name="invoice_line_ids" style="overflow-y: auto;max-height: 200px;" colspan="4" nolabel="1" mode="tree" context="{'default_invoice_id': active_id}">  
		            		 		<tree string="Lignes de facture" limit="10000" editable="bottom">
		            		 			<field name="invoice_id" invisible="1"/>
		            		 			<field name="kks"/>
				                		<field name="designation"/>
				                		<field name="price_unit"/>
				                		<field name="qte"/>
				                		<field name="montant"/>
		            		 		</tree>
	                		 	</field>
	                		</fieldset> 			
	                	</group>
	                	<group>
		                	<group>
		                		<fieldset style="border: 1px solid #ddd !important;padding: 0 0.5em 0em 0.5em !important;margin: 0 0 1em 0 !important;">
									<legend style="color: #7c7bad;width:inherit;padding:0 2px; border-bottom:none;font-weight: bold ! important;font-size: 14px ! important;margin-bottom: 0px ! important;" >Arrêtée la présente facture à la somme de :</legend> 
						  			<field name="montant_text" readonly="1" nolabel="1"/>
			                    </fieldset>
			                    <newline/>
			                    <fieldset style="border: 1px solid #ddd !important;padding: 0 0.5em 0em 0.5em !important;margin: 0 0 1em 0 !important;">
									<legend style="color: #7c7bad;width:inherit;padding:0 2px; border-bottom:none;font-weight: bold ! important;font-size: 14px ! important;margin-bottom: 0px ! important;" >Coordonnées Bancaires :</legend> 
						  			<group> 
						  				<field name="rib"/>
						  				<field name="swift"/>
						  			</group>
			                    </fieldset>
		                    </group>
		                	
		                	<group class="oe_subtotal_footer oe_right" name="total">
		                        <field name="montant"/>
		                        <field name="retenue_pourcentage"/>
		                        <field name="tva_transport_pourcentage"/>
		                        <field name="remise_pourcentage"/>
		                        <field name="montant_ht"/>
		                        <field name="tva"/>
		                        <div class="oe_subtotal_footer_separator oe_inline o_td_label">
		                            <label for="montant_ttc" />
		                        </div>
		                        <field name="montant_ttc" nolabel="1" class="oe_subtotal_footer_separator"/>
		                    </group>
	                    </group>
                    </sheet>	
                </form>
            </field>
        </record>
